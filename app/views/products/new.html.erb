<h1>新しい商品</h1>

<%= form_with model: @product, local: true do |f| %>
  <p>
    <%= f.label :name, "商品名" %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :price, "価格（円）" %><br>
    <%= f.number_field :price, min: 0 %>
  </p>
  <p><%= f.submit "作成" %></p>
<% end %>

<%= link_to "一覧へ戻る", products_path %>
