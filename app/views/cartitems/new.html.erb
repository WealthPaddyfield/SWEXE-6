<h1>商品をカートに追加</h1>

<%= form_with url: cart_items_path, method: :post, local: true do %>
  <p>
    <label>商品</label><br>
    <%= select_tag :product_id, options_from_collection_for_select(@products, :id, :name) %>
  </p>
  <p>
    <label>数量</label><br>
    <%= number_field_tag :quantity, 1, min: 1 %>
  </p>
  <p><%= submit_tag "追加" %></p>
<% end %>
